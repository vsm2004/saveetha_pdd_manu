<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ocean_shore"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp"> <!-- Added margin to lower content -->

        <!-- Greeting -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello User"
            android:textSize="30sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Travel Type"
            android:textSize="24sp"
            android:textColor="#CCCCFF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your preferred travel style and let us create\na perfect journey for you"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal" />

        <!-- Travel Options -->
        <GridLayout
            android:id="@+id/grid_travel_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="24dp"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Hotels -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hotel_bookings"
                    android:scaleType="centerCrop"
                    android:contentDescription="Hotels" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotels"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="14dp" />
            </LinearLayout>

            <!-- Resorts -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="88dp"
                    android:contentDescription="Resorts"
                    android:scaleType="centerCrop"
                    android:src="@drawable/resort_spa_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resorts"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="14dp" />
            </LinearLayout>

            <!-- Vacation Trip -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:src="@drawable/vacations_image"
                    android:scaleType="centerCrop"
                    android:contentDescription="Vacation Trip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vacation trip"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="14dp" />
            </LinearLayout>

            <!-- Business Trip -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:src="@drawable/business_meet_spots"
                    android:scaleType="centerCrop"
                    android:contentDescription="Business Trip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Trip"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="14dp" />
            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>

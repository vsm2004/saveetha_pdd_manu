<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_beach"> <!-- your beach image -->

    <!-- Logo and App Name -->
    <LinearLayout
        android:id="@+id/heading_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/genie_image"
            android:contentDescription="Logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StayGenie"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Heading -->
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where would you like to go ?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/heading_logo"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Main Card -->
    <LinearLayout
        android:id="@+id/location_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:background="#DDDDDD"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:elevation="4dp">

        <!-- Current Location Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current location"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- GPS & Manual Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_gps"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="Use GPS"
                android:textColor="#FFFFFF"
                android:background="#1A00FF"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_manual"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="Enter manually"
                android:textColor="#FFFFFF"
                android:background="#552200"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Green Input Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FF00"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter country:"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter area/city:"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination location"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Country:"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Continue Button -->
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CONTINUE"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:background="#CC0000" />
    </LinearLayout>

    <!-- Logout Option -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:elevation="3dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_logout"
            android:layout_marginEnd="8dp"
            android:contentDescription="Logout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout\nOption"
            android:textColor="#000000"
            android:textSize="19sp" />
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We’d love your feedback!"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help us improve your next stay."
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_marginBottom="20dp" />

        <!-- Rating Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate our hospitality below"
            android:textColor="#000000"
            android:textSize="19sp"
            android:layout_marginBottom="8dp" />

        <!-- Star Rating Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/rounded_purple_bg"
            android:padding="10dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/golden_star"
                android:layout_marginHorizontal="6dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/golden_star"
                android:layout_marginHorizontal="6dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/golden_star"
                android:layout_marginHorizontal="6dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/golden_star"
                android:layout_marginHorizontal="6dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/golden_star"
                android:layout_marginHorizontal="6dp" />
        </LinearLayout>

        <!-- Emoji Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a suitable emoji as mood indicator.."
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- Emoji Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#DDDDDD"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#DDDDDD"
            android:clipToPadding="false"
            android:layout_gravity="center_horizontal">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="😡"
                android:textSize="24sp"
                android:layout_marginHorizontal="10dp" />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="😐"
                android:textSize="24sp"
                android:layout_marginHorizontal="10dp" />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🙂"
                android:textSize="24sp"
                android:layout_marginHorizontal="10dp" />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="😊"
                android:textSize="24sp"
                android:layout_marginHorizontal="10dp" />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🤩"
                android:textSize="24sp"
                android:layout_marginHorizontal="10dp" />
        </LinearLayout>

        <!-- Experience Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tell us about your experiences"
            android:textColor="#000000"
            android:textSize="19sp"
            android:layout_marginBottom="8dp" />

        <!-- Feedback Box -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#E0E0E0"
            android:hint="Type here..."
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="20dp" />

        <!-- Submit Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Feedback"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@drawable/rounded_purple_bg"
            android:padding="12dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
